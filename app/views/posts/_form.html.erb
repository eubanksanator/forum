<%= form_for(@post) do |f| %>

<div class="form-group">
  <%= f.label :title, class: 'form-control' %>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :content, class: 'form-control' %>
  <%= f.text_area :content, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.submit %>
</div>
<% end %>
